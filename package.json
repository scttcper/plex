{
  "name": "@ctrl/plex",
  "version": "0.0.0-placeholder",
  "description": "plex api client in typescript",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": "scttcper/plex",
  "type": "module",
  "main": "./dist/src/index.js",
  "typings": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "keywords": [
    "plex",
    "typescript"
  ],
  "scripts": {
    "lint": "pnpm run '/^(lint:biome|lint:eslint)$/'",
    "lint:biome": "biome check .",
    "lint:eslint": "eslint --ext .ts,.tsx .",
    "lint:fix": "pnpm run '/^(lint:biome|lint:eslint):fix$/'",
    "lint:eslint:fix": "eslint --ext .ts,.tsx . --fix",
    "lint:biome:fix": "biome check . --apply",
    "prepare": "npm run build",
    "build": "tsc",
    "build:docs": "typedoc",
    "test": "vitest run",
    "test:ci": "vitest run --coverage --reporter=default --reporter=junit --outputFile=./junit.xml",
    "bootstraptest": "node --loader ts-node/esm scripts/bootstraptest.ts",
    "teardowntest": "node --loader ts-node/esm scripts/teardowntest.ts",
    "add-media": "node --loader ts-node/esm scripts/add-media.ts",
    "test-cleanup": "node --loader ts-node/esm scripts/test-cleanup.ts"
  },
  "dependencies": {
    "@ctrl/mac-address": "^3.0.3",
    "ofetch": "^1.3.4",
    "p-any": "^4.0.0",
    "type-fest": "^4.18.1",
    "ws": "^8.17.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.2",
    "@ctrl/eslint-config-biome": "2.6.7",
    "@sindresorhus/tsconfig": "5.0.0",
    "@types/lodash": "4.17.1",
    "@types/micromatch": "4.0.7",
    "@types/node": "20.12.8",
    "@types/ws": "8.5.10",
    "@types/xml2js": "0.4.14",
    "@types/yargs": "17.0.32",
    "@vitest/coverage-v8": "1.6.0",
    "delay": "6.0.0",
    "eslint": "8.57.0",
    "execa": "8.0.1",
    "glob": "10.3.12",
    "globby": "14.0.1",
    "lodash": "4.17.21",
    "make-dir": "5.0.0",
    "ora": "8.0.1",
    "p-retry": "6.2.0",
    "ts-node": "10.9.2",
    "typedoc": "0.25.13",
    "typescript": "5.4.5",
    "vitest": "1.6.0",
    "yargs": "17.7.2"
  },
  "release": {
    "branches": [
      "master"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
